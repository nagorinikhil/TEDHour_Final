<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp">


    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/imageViewPlay"
        android:id="@+id/imageViewItem"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_width="50dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textViewTitle"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imageViewItem"
        android:gravity="left|center_vertical"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold" />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/textViewTime"
        android:layout_toRightOf="@+id/imageViewItem"
        android:gravity="left|center_vertical"
        android:textColor="?attr/colorControlNormal"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_below="@+id/textViewTime"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imageViewItem"
        android:id="@+id/imageViewPlay"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/PlayNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewPlay"
        android:layout_toEndOf="@+id/imageViewPlay"
        android:layout_below="@+id/textViewTime"
        android:layout_marginTop="3dp"
        android:layout_alignBaseline="@+id/imageViewPlay"
        android:layout_marginLeft="3dp"
        android:id="@+id/textViewPlayNow"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="normal|bold" />

</RelativeLayout>